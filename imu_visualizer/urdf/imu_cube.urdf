<?xml version="1.0"?>
<robot name="imu_robot">
  <link name="imu_link">
    <visual>
      <geometry>
        <!-- Cylinder: length = height (z-axis), radius = 0.05 -->
        <cylinder length="0.3" radius="0.05"/>
      </geometry>
      <material name="purple">
        <!-- RGBA for purple (red + blue) -->
        <color rgba="0.5 0.0 0.5 1.0"/>
      </material>
    </visual>
  </link>
</robot>
